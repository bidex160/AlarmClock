<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:text="About"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about"
        android:padding="10dp"
        android:text="It's an Alarm Manager Application which can be use to set Alarm."
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/text1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"
        android:text="The Alarm can be set by Clicking on Add button at the top, after setting the alarm, all alarm set will be display in MainActivity and any of the alarm can be cancel be long pressing on the clock of the alarm u want to remove."
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text1"
        android:text="Designed by
Bidex."
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="15dp" />



</RelativeLayout>